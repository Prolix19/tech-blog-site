<div class="comments">
    {{!-- Go through comments (if any) and create a card for each --}}
    {{#each this}}
    <div class="card mx-auto">
        <div class="card-header"></div>

        <div class="card-body">
            {{comment_text}}
            <p></p>
            &#8211; {{user.username}}, {{format_date created_at}}
        </div>
    </div>
    {{/each}}
</div>