{{!-- Displays a card containing the post's data --}}
<div class="card mx-auto">
    <div class="card-header">
        <a href="/post/{{id}}">
            {{title}}
        </a>
        <p class="author">Posted by {{user.username}} on {{format_date created_at}}</p>
    </div>

    <div class="card-body">
        <p>{{content}}</p>
    </div>
</div>